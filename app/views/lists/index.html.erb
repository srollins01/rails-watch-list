<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3>
      <span data-controller="typed-js"></span>
    </h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <% if list.photo.key %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>'); background-size: cover; background-position: center;" data-aos="zoom-in" data-aos-duration="500">
          <% else %>
          <div class="card-category list-img" data-aos="zoom-in" data-aos-duration="500">
          <% end %>
            <p class=" py-1 px-2 m-0 list-txt"><%= list.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
